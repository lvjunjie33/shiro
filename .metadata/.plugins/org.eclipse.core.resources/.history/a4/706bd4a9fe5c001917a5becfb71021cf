								<result column="status" property="status"/>
				            </association>
		            </collection>
	       		</association>
		</collection>
    </resultMap>
    

<select id="findByUserName" parameterType="java.lang.String" resultMap="BaseResultMap">
	select 
	ai.id as aid,
	ai.user_id,
	ai.account_num,
	ai.account_type,
	ai.create_time,
	ai.create_user_id,
	ai.create_user_name,
	ai.passwd,
	ui.id,
	ui.company_name,
	ui.department,
	ui.head_portrait,
	ui.nickname,
	ui.phone_num,
	ui.position_name,
	ui.sex,
	ui.user_name,
	ui.user_name_en,
	ui.voiceprint,
	ui.work_mail
	from user_info ui
	INNER JOIN account_info ai
	ON ui.id=ai.user_id 
	where ai.account_num = #{userName}
</select>
<select id="findByUserRole" parameterType="java.lang.Integer" resultMap="BaseResultMap">
	select 
	ai.id,
	ai.user_id,
	ai.account_num,
	ai.account_type,
	ai.create_time,
	ai.create_user_id,
	ai.create_user_name,
	ai.passwd,
	ui.id as uid,
	ui.company_name,
	ui.department,
	ui.head_portrait,
	ui.nickname,
	ui.phone_num,
	ui.position_name,
	ui.sex,
	ui.user_name,
	ui.user_name_en,
	ui.voiceprint,
	ui.work_mail,
	ru.id as ruid,
	ru.role_id,
	ru.user_id,
	r.id as rid,
	r.role_name,
	r.status
	 from user_info ui
	INNER JOIN account_info ai
	ON ui.id=ai.user_id
	LEFT JOIN role_user ru 
	on ru.user_id=ui.id
	LEFT JOIN role r
	on r.id=ru.role_id
	where ui.id=#{userID}
</select>

<select id="findByModel" parameterType="java.lang.Integer" resultMap="BaseResultMap">
	select 
	ai.id,
	ai.user_id,
	ai.account_num,
	ai.account_type,
	ai.create_time,
	ai.create_user_id,
	ai.create_user_name,
	ai.passwd,
	ui.id as uid,
	ui.company_name,
	ui.department,
	ui.head_portrait,
	ui.nickname,
	ui.phone_num,
	ui.position_name,
	ui.sex,
	ui.user_name,
	ui.user_name_en,
	ui.voiceprint,
	ui.work_mail,
	ru.id as ruid,
	ru.role_id,
	ru.user_id,
	r.id as rid,
	r.role_name,
	r.status,
	rm.id as rmid,
	rm.module_id,
	rm.role_id,
	m.id as mid,
	m.module_name,
	m.module_type,
	m.module_url,
	m.status
	 from user_info ui
	INNER JOIN account_info ai
	ON ui.id=ai.user_id
	LEFT JOIN role_user ru 
	on ru.user_id=ui.id
	LEFT JOIN role r
	on r.id=ru.role_id
	LEFT JOIN role_module rm
	on rm.role_id=r.id
	LEFT JOIN module m
	on rm.module_id=m.id
	where ui.id=#{userID}
</select>

</mapper>