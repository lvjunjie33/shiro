<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.dao.UserMapper">

 <resultMap id="BaseResultMap" type="com.springboot.pojo.UserInfo" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="user_name_en" property="userNameEn" jdbcType="VARCHAR" />
        <result column="sex" property="sex" javaType="INTEGER"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR" />
        <result column="head_portrait" property="headPortrait" jdbcType="VARCHAR" />
        <result column="company_name" property="companyName" jdbcType="VARCHAR" />
        <result column="position_name" property="positionName" jdbcType="VARCHAR" />
        <result column="voiceprint" property="voiceprint" jdbcType="VARCHAR" />
        <result column="department" property="department" jdbcType="VARCHAR" />
        <result column="phone_num" property="phoneNum" jdbcType="VARCHAR" />
        <result column="work_mail" property="workMail" jdbcType="VARCHAR" />
        <collection property="accountInfo" ofType="AccountInfo" column="id">
			<id column="aid" property="id"/><!-- 这里的column对应的是下面查询的别名，而不是表字段名 -->
		    <result column="user_id" property="userId"/>
			<result column="account_num" property="accountNum"/>
			<result column="passwd" property="passwd"/>
			<result column="account_type" property="accountType"/>
			<result column="create_time" property="createTime"/>
			<result column="create_user_id" property="createUserId"/>
			<result column="create_user_name" property="createUserName"/>
		</collection>
		<collection property="roles" ofType="RoleInfo" column="id">
 			<id column="rid" property="id"/><!--这里的column对应的是下面查询的别名，而不是表字段名 -->
			<result column="sname" property="name"/><!-- property对应JavaBean中的属性名 -->
			<result column="className" property="className"/>
		</collection>
    </resultMap>
    

<select id="findByUserName" parameterType="java.lang.String" resultMap="BaseResultMap">
	select 
	ai.id,
	ai.user_id,
	ai.account_num,
	ai.account_type,
	ai.create_time,
	ai.create_user_id,
	ai.create_user_name,
	ai.passwd,
	ui.id as uid,
	ui.company_name,
	ui.department,
	ui.head_portrait,
	ui.nickname,
	ui.phone_num,
	ui.position_name,
	ui.sex,
	ui.user_name,
	ui.user_name_en,
	ui.voiceprint,
	ui.work_mail
	from user_info ui
	INNER JOIN account_info ai
	ON ui.id=ai.user_id 
	where ai.account_num = #{userName}
</select>
<select id="findByUserRole" parameterType="java.lang.String" resultMap="BaseResultMap">
	select 
	ai.id,
	ai.user_id,
	ai.account_num,
	ai.account_type,
	ai.create_time,
	ai.create_user_id,
	ai.create_user_name,
	ai.passwd,
	ui.id as uid,
	ui.company_name,
	ui.department,
	ui.head_portrait,
	ui.nickname,
	ui.phone_num,
	ui.position_name,
	ui.sex,
	ui.user_name,
	ui.user_name_en,
	ui.voiceprint,
	ui.work_mail,
	ru.id as ruid,
	ru.role_id,
	ru.user_id,
	r.id as rid,
	r.role_name,
	r.status
	 from user_info ui
	INNER JOIN account_info ai
	ON ui.id=ai.user_id
	LEFT JOIN role_user ru 
	on ru.user_id=ui.id
	LEFT JOIN role r
	on r.id=ru.role_id
	where ai.account_num=#{userName}
</select>

<select id="findByModel" parameterType="java.lang.String" resultMap="BaseResultMap">
	select 
	ai.id,
	ai.user_id,
	ai.account_num,
	ai.account_type,
	ai.create_time,
	ai.create_user_id,
	ai.create_user_name,
	ai.passwd,
	ui.id as uid,
	ui.company_name,
	ui.department,
	ui.head_portrait,
	ui.nickname,
	ui.phone_num,
	ui.position_name,
	ui.sex,
	ui.user_name,
	ui.user_name_en,
	ui.voiceprint,
	ui.work_mail,
	ru.id as ruid,
	ru.role_id,
	ru.user_id,
	r.id as rid,
	r.role_name,
	r.status,
	rm.id as rmid,
	rm.module_id,
	rm.role_id,
	m.id as mid,
	m.module_name,
	m.module_type,
	m.module_url,
	m.status
	 from user_info ui
	INNER JOIN account_info ai
	ON ui.id=ai.user_id
	LEFT JOIN role_user ru 
	on ru.user_id=ui.id
	LEFT JOIN role r
	on r.id=ru.role_id
	LEFT JOIN role_module rm
	on rm.role_id=r.id
	LEFT JOIN module m
	on rm.module_id=m.id
	where ai.account_num=#{userName}
</select>

</mapper>